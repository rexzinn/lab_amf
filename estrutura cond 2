valor1 = float(input("Digite o primeiro numer "))
valor2 = float(input("Digite o segundo valor: "))

if valor1 == valor2:
    print("Os valores digitados são iguais.")
else:
    if valor1 > valor2:
        maior = valor1
        menor = valor2
    else:
        maior = valor2
        menor = valor1
    print("O maior valor é: ", maior)
    print("O menor valor é: ", menor)




























